<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FBC725"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/cbCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FBC725"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvTaskTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/background_app"
        android:layout_weight="1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etEditTask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/Edit_Task"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FBC725"
        android:textStyle="bold"
        android:drawableEnd="@drawable/baseline_edit_24"
        android:text="@string/editar" />
//modificar el tamaño del boton editar y eliminar para que
    sean mas pequeño y entre bien el edittext//
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:backgroundTint="#FBC725"
        android:drawableEnd="@drawable/baseline_delete_24"
        android:text="@string/remove" />
</LinearLayout>
