<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#FBC725"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".loadingNova">

    <TextView
        android:id="@+id/idText"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem-vindo"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/idLayUm"

        />
    <LinearLayout
        android:id="@+id/idLayUm"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/idText"
        android:background="@drawable/estanvo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gestion"
        app:layout_constraintTop_toBottomOf="@id/idText"
        >
    </LinearLayout>
    <TextView
        android:id="@+id/gestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gerenciamento_de_tarefas"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_below="@id/idLayUm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idLayUm"

        />

</androidx.constraintlayout.widget.ConstraintLayout>